{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Description": "CloudPricing batch File-Forwarder-Lambda",
  "Parameters": {
    "PONumber": {
      "Description": "PO Number for billing",
      "Type": "String",
      "Default": "7000002358",
      "MinLength": "1",
      "MaxLength": "255",
      "AllowedPattern": "[\\x20-\\x7E]*",
      "ConstraintDescription": "Must contain only ASCII characters."
    },
    "PvtSNc": {
      "Description": "Private subnet for confidential apps in us-east-1c",
      "Type": "String",
      "Default": "subnet-0186b43162a344d9a"
    },

    "PvtSNd": {
      "Description": "Private subnet for confidential apps in us-east-1d",
      "Type": "String",
      "Default": "subnet-0ad1216eb31e15186"
    },
    "PvtSNe": {
      "Description" : "Private subnet for confidential apps in us-east-1e CIDR: 10.168.142.0/23",
      "Type": "String",
      "Default": "subnet-0a5d9eea71b9c97c6"
    },

    "VPCID": {
      "Description": "VPC - vpc_sysco_nonprod_02 CIDR: 10.168.128.0/20",
      "Type": "String",
      "Default": "vpc-ff88269a"
    },
    "DefaultSG": {
      "Description": "Default Security Group",
      "Type": "String",
      "Default": "sg-039f822d40c446322"
    },

    "SG2": {
      "Description": "Default Security Group",
      "Type": "String",
      "Default": "sg-0a56447308e39b902"
    },

    "SG3": {
      "Description": "Default Security Group",
      "Type": "String",
      "Default": "sg-078061ddab53c5c41"
    },

    "S3BucketIn" : {
      "Type" : "String",
      "Description" : "S3 bucket for Batch Pricing Input",
      "Default": "sysco-us-east-1-prcp-nonprod-batch-output"
    },

    "S3BucketOut" : {
      "Type" : "String",
      "Description" : "S3 bucket for Batch Pricing Output",
      "Default": "sysco-nonprod-cloudpricing-batch-output-us-east-1"
    },

    "S3BucketOut2" : {
      "Type" : "String",
      "Description" : "S3 bucket for Batch Pricing Output 2",
      "Default": "sysco-nonprod-batchv2-output-us-east-1"
    },

    "S3CodeBucket" : {
      "Type" : "String",
      "Description" : "S3 bucket for the Lambda Code",
      "Default": "sysco-us-east-1-prcp-nonprod-codedeploy"
    },


    "S3CodeKey" : {
      "Type" : "String",
      "Description" : "S3 bucket key for the Lambda Code",
      "Default": "CloudPricing_Batch02/cp-s3-file-forwarder-1.0.0.zip"
    },

    "FunctionName" : {
      "Type" : "String",
      "Description" : "*** TBD ****",
      "Default": "CP-BatchService-S3-file-forwarder"
    },

    "IAMRole" : {
      "Type" : "String",
      "Description" : "*** TBD ****",
      "Default": "arn:aws:iam::037295147636:role/CloudPricing-IAM-Lambda-Role"
    },

    "CommonDBName" : {
      "Type" : "String",
      "Description" : "*** TBD ****",
      "Default": "CPDB_Common01q"
    },

    "CommonDBURL" : {
      "Type" : "String",
      "Description" : "*** TBD ****",
      "Default": "cloud-pricing-non-prod-01-cpdbclusterdev-1o60gz0gqw6fx.cluster-crkqmj3qk07x.us-east-1.rds.amazonaws.com"
    },


    "ApplicationName": {
      "Description": "File forwarder",
      "Type": "String",
      "Default": "Cloud Pricing",
      "MinLength": "1",
      "MaxLength": "255",
      "AllowedPattern": "[\\x20-\\x7E]*",
      "ConstraintDescription": "Must contain only ASCII characters."
    },

    "ApplicationId": {
      "Description": "Application ID",
      "Type": "String",
      "Default": "APP-001151",
      "MinLength": "1",
      "MaxLength": "255",
      "AllowedPattern": "[\\x20-\\x7E]*",
      "ConstraintDescription": "Must contain only ASCII characters."
    },

    "Approver": {
      "Description": "Name of application approver",
      "Type": "String",
      "Default": "Thibodeaux.Paula@corp.sysco.com",
      "MinLength": "1",
      "MaxLength": "255"
    },

    "Owner": {
      "Description": "Name of application owner",
      "Type": "String",
      "Default": "Owen.James@corp.sysco.com Krishan.Senevirathne@sysco.com",
      "MinLength": "1",
      "MaxLength": "255"
    },

    "ProjectId": {
      "Description": "Project ID",
      "Type": "String",
      "Default": "BT.001176",
      "MinLength": "1",
      "MaxLength": "255",
      "AllowedPattern": "[\\x20-\\x7E]*",
      "ConstraintDescription": "Must contain only ASCII characters."
    },

    "Platform": {
      "Description": "Platform",
      "Type": "String",
      "Default": "Cloud Pricing V4"
    },

    "Environment": {
      "Description": "Environment for application",
      "Type": "String",
      "Default": "Execution",
      "AllowedValues": [
        "Sandbox",
        "Development",
        "Quality",
        "Staging",
        "Tuning",
        "Execution",
        "Training",
        "Production"
      ],
      "ConstraintDescription": "Must be a valid environment."
    },

    "EnvironmentShort": {
      "Description": "Environment for application",
      "Type": "String",
      "Default": "EXE",
      "AllowedValues": [
        "DEV",
        "QA",
        "STG",
        "SBX",
        "EXE",
        "PROD"
      ],
      "ConstraintDescription": "Must be a valid environment."
    }
  },


  "Resources" : {
    "LFunctionCP01": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": { "Ref": "S3CodeBucket" },
          "S3Key": { "Ref": "S3CodeKey" }
        },
        "FunctionName": { "Ref": "FunctionName" },
        "Handler": "com.sysco.cps3.handler.S3ObjectForwarderHandler::handleS3Event",
        "Runtime": "java8",
        "Description": "Controller function for Cloud Pricing Batch process",
        "MemorySize": 512,
        "Timeout": 300,
        "Role": { "Ref": "IAMRole" },
        "VpcConfig": {
          "SecurityGroupIds": [
            { "Ref": "DefaultSG" },
            { "Ref": "SG2" },
            { "Ref": "SG3" }
          ],
          "SubnetIds": [
            { "Ref": "PvtSNc" },
            { "Ref": "PvtSNd" },
            { "Ref": "PvtSNe"}
          ]
        },
        "Tags" : [
          { "Key" : "Name", "Value" : "cp-lambda-file-forwarder" },
          { "Key" : "Application_Name", "Value" : { "Ref" : "ApplicationName" } },
          { "Key" : "Application_Id", "Value" : { "Ref" : "ApplicationId" } },
          { "Key" : "Owner", "Value" : { "Ref" : "Owner" } },
          { "Key" : "Approver", "Value" : { "Ref" : "Approver" } },
          { "Key" : "PO_Number", "Value" : { "Ref" : "PONumber" } },
          { "Key" : "Environment", "Value" : { "Ref" : "Environment" } },
          { "Key" : "Project_ID", "Value" : { "Ref" : "ProjectId" } },
          { "Key" : "2WTAGGER", "Value" : "team_managed" },
          { "Key" : "Platform", "Value" : { "Ref" : "Platform" } },
          { "Key" : "Component", "Value": "Lambda File forwarder" }
        ],
        "Environment": {
          "Variables": {
            "COMMONDB_NAME": { "Ref" : "CommonDBName" },
            "COMMONDB_USERNAME": "svccp000",
            "COMMONDB_PASSWORD": "V7N5Ryf5siAz5SXlPHHp7MnTL2bJRpSMU/6PffF7Fvw=",
            "ENVIRONMENT": { "Ref" : "Environment" },
            "COMMONDB_URL": { "Ref" : "CommonDBURL" }

          }
        }
      }
    },
    "BucketIn" : {
      "Type" : "AWS::S3::Bucket",
      "Properties" : {
        "BucketName" : { "Ref" : "S3BucketIn" },
        "NotificationConfiguration": {
          "LambdaConfigurations": [
            {
              "Event" : "s3:ObjectCreated:*",
              "Function" : { "Fn::GetAtt" : [ "LFunctionCP01", "Arn" ] }
            }]
        }
      },
      "DependsOn": ["LFunctionCP01"]
    },
    "BucketPerm": {
      "Type": "AWS::Lambda::Permission",
      "Properties" : {
        "Action": "lambda:InvokeFunction",
        "FunctionName": {"Ref": "LFunctionCP01"},
        "Principal": "s3.amazonaws.com",
        "SourceAccount": {"Ref": "AWS::AccountId"},
        "SourceArn": { "Fn::Join": [":", ["arn", "aws", "s3", "" , "", {"Ref" : "BucketIn"}]]}
      },
      "DependsOn": ["LFunctionCP01", "BucketIn"]
    },
    "BucketOut" : {
      "Type" : "AWS::S3::Bucket",
      "Properties" : {
        "BucketName" : { "Ref" : "S3BucketOut" }
      }
    },

    "BucketOut2" : {
      "Type" : "AWS::S3::Bucket",
      "Properties" : {
        "BucketName" : { "Ref" : "S3BucketOut2" }
      }
    },
  }
}