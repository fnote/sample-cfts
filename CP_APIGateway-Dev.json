					{ "Key" : "Environment", "Value" : { "Ref" : "Environment" } },
					{ "Key" : "PO_Number", "Value" : { "Ref" : "PONumber" } },
					{ "Key" : "Project_ID", "Value" : { "Ref" : "ProjectId" } },
					{ "Key" : "Owner", "Value" : { "Ref" : "Owner" } },
					{ "Key" : "Approver", "Value" : { "Ref" : "Approver" } }
				]
			}
		},
		"ApiGatewayELBPublic": {
			"Type": "AWS::ElasticLoadBalancing::LoadBalancer",
			"Properties": {
				"Subnets" : [{ "Ref" : "SubnetIdPublicEastC" },{ "Ref" : "SubnetIdPublicEastD" }],
				"LoadBalancerName" : { "Fn::Join" : ["", ["elb-cp-apigateway-public-", { "Ref" : "EnvironmentShort" }]]},
				"Scheme": "internet-facing",
				"CrossZone": "true",
				"SecurityGroups": [ { "Ref": "sgWeb" } ],
				"Listeners": [
					{
						"Protocol": "HTTP",
						"LoadBalancerPort": "80",
						"InstancePort": "8080"
					},
					{
						"Protocol": "TCP",
						"LoadBalancerPort": "443",
						"InstancePort": "8080"
					}
				],
				"HealthCheck": {
					"Target" : "HTTP:8080/",
					"HealthyThreshold": "3",
					"UnhealthyThreshold": "7",
					"Interval": "120",
					"Timeout": "15"
				},
				"Tags": [
					{ "Key" : "Name", "Value" : { "Fn::Join" : ["", ["CP-APIGateway-ELB-public-", { "Ref" : "EnvironmentShort" }]]}},
					{ "Key" : "Application_Name", "Value" : { "Ref" : "ApplicationName" } },
					{ "Key" : "Application_Id", "Value" : { "Ref" : "ApplicationId" } },
					{ "Key" : "Environment", "Value" : { "Ref" : "Environment" } },
					{ "Key" : "PO_Number", "Value" : { "Ref" : "PONumber" } },
					{ "Key" : "Project_ID", "Value" : { "Ref" : "ProjectId" } },
					{ "Key" : "Owner", "Value" : { "Ref" : "Owner" } },
					{ "Key" : "Approver", "Value" : { "Ref" : "Approver" } }
				]
			}
		},
