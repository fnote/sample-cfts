		"sgRedis" : {
			"Type" : "AWS::EC2::SecurityGroup",
			"Properties" : {
				"GroupDescription" : { "Fn::Join" : ["", ["CP API Gateway Redis SG-", { "Ref" : "EnvironmentShort" }]]},
				"VpcId" : { "Ref" : "VPCID" },
				"SecurityGroupIngress" : [
